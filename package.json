      "ts-node": "^10.8.0",
      "tsconfig-paths": "4.0.0",
      "typescript": "^4.7.2"
   },
   "jest": {
      "moduleFileExtensions": [
         "js",
         "json",
         "ts"
      ],
      "rootDir": "src",
      "testRegex": ".*\\.spec\\.ts$",
      "transform": {
         "^.+\\.(t|j)s$": "ts-jest"
      },
      "collectCoverageFrom": [
         "**/*.(t|j)s"
      ],
      "coverageDirectory": "../coverage",
      "testEnvironment": "node"
   },
   "prisma": {
      "seed": "ts-node prisma/data/index.ts",
      "schema": "prisma/schema.prisma"
   },
   "engines": {
      "node": "16.x",
      "yarn": "1.x"
   }
