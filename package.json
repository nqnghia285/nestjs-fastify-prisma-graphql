{
   "name": "back-end",
   "version": "0.0.1",
   "description": "",
   "author": "nqnghia285 <nqnghia285@gmail.com>",
   "private": true,
   "license": "MIT",
   "scripts": {
      "heroku-prebuild": "yarn install --prod=false",
      "deploy": "bash scripts/deploy.sh",
      "git": "bash scripts/git-push.sh",
      "open": "heroku open",
      "cmd": "heroku ps:exec",
      "log": "heroku logs -t",
      "prebuild": "rimraf dist",
      "build": "nest build && yarn migrate:reset",
      "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
      "start": "nest start",
      "dev": "nest start --watch",
      "dev-g": "yarn generate && nest start --watch",
      "debug": "nest start --debug --watch",
      "prod": "node dist/main",
      "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:cov": "jest --coverage",
      "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
      "test:e2e": "jest --config ./test/jest-e2e.json",
      "remove:generated": "rm -rf src/generated/",
      "seed": "prisma db seed",
      "generate": "yarn remove:generated && prisma generate",
      "pull:db": "prisma db pull",
      "psql": "sudo -u postgres psql",
      "migrate:dev": "prisma migrate dev --skip-generate --name init",
      "migrate:dev:g": "prisma migrate dev --name init --preview-feature",
      "migrate:reset": "prisma migrate reset --force",
      "migrate:deploy": "prisma migrate deploy --preview-feature",
      "migrate:resolve": "prisma migrate resolve --preview-feature",
      "clear:generated": "bash scripts/clear-generated.sh"
   },
   "dependencies": {
      "@casl/ability": "^5.4.3",
      "@casl/prisma": "^1.0.1",
      "@fastify/cookie": "^6.0.0",
      "@fastify/cors": "^7.0.0",
      "@fastify/passport": "^1.0.1",
      "@fastify/static": "^5.0.2",
      "@nestjs/apollo": "^10.0.12",
      "@nestjs/common": "^8.4.5",
      "@nestjs/config": "^2.0.1",
      "@nestjs/core": "^8.4.5",
      "@nestjs/graphql": "^10.0.12",
      "@nestjs/jwt": "^8.0.1",
      "@nestjs/passport": "^8.2.1",
      "@nestjs/platform-express": "^8.4.5",
      "@nestjs/platform-fastify": "^8.4.5",
      "@nestjs/platform-socket.io": "^8.4.5",
      "@nestjs/serve-static": "^2.2.2",
      "@nestjs/websockets": "^8.4.5",
      "@prisma/client": "^3.14.0",
      "@types/bcrypt": "^5.0.0",
      "@types/cookie-parser": "^1.4.3",
      "@types/graphql-upload": "^8.0.11",
      "@types/ip": "^1.1.0",
      "@types/passport-jwt": "^3.0.6",
      "@types/passport-local": "^1.0.34",
      "apollo-server-cache-redis": "^3.3.1",
      "apollo-server-fastify": "^3.8.1",
      "bcrypt": "^5.0.1",
      "class-transformer": "^0.5.1",
      "class-validator": "^0.13.2",
      "cookie-parser": "^1.4.6",
      "fastify": "^3.29.0",
      "fastify-static": "^4.7.0",
      "graphql": "^16.5.0",
      "graphql-scalars": "^1.17.0",
      "graphql-upload": "^14.0.0",
      "ioredis": "^5.0.5",
      "ip": "^1.1.8",
      "joi": "^17.6.0",
      "passport": "^0.6.0",
      "passport-jwt": "^4.0.0",
      "passport-local": "^1.0.0",
      "prisma-graphql-type-decimal": "^2.0.2",
      "prisma-parse-selected-fields": "^1.1.10",
      "reflect-metadata": "^0.1.13",
      "rimraf": "^3.0.2",
      "rxjs": "^7.5.5",
      "socket.io": "^4.5.1"
   },
   "devDependencies": {
      "@nestjs/cli": "^8.2.6",
      "@nestjs/schematics": "^8.0.11",
      "@nestjs/testing": "^8.4.5",
      "@types/express": "^4.17.13",
      "@types/jest": "27.5.1",
      "@types/node": "^17.0.35",
      "@types/supertest": "^2.0.12",
      "@typescript-eslint/eslint-plugin": "^5.26.0",
      "@typescript-eslint/parser": "^5.26.0",
      "eslint": "^8.16.0",
      "eslint-config-prettier": "^8.5.0",
      "eslint-plugin-prettier": "^4.0.0",
      "jest": "28.1.0",
